<% provide(:title, "Reset Password") %>
<br><br><h1>Reset Password</h1><br><br><br>

<%= form_tag(password_resets_path, :method => "post") do %>
  <div class="container my-blue">
  	<div class="col-md-3"></div>
  	<div class="col-md-6">
		<%= text_field_tag :email, params[:email], placeholder: "Please enter your email", class: "form-control my-blue" %><br><br>

		<div class="row">
                <div class="col-md-3"></div>
                <div class="col-md-6">
					<%= submit_tag "Submit", :name => nil, class: "btn btn-default btn-lg btn-block" %>
                </div>
                <div class="col-md-3"></div>
        </div>
  	</div>
  	<div class="col-md-3"></div>
  </div>
<% end %>
<br><br><br><br><br>