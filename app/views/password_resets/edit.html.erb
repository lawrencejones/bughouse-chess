<% provide(:title, "Reset Password") %>
<br><br><h1>Password Reset</h1><br><br><br>

<div class="container my-blue">
	<div class="col-md-3"></div>
	<div class="col-md-6">
		<%= form_for(@user, url: edit_password_reset_path(:password_reset_token => @user.password_reset_token)) do |f| %>
		
			<%= f.label :password %>
			<%= f.password_field :password, class: "form-control my-blue" %>
			<br>
			<%= f.label :password_confirmation %>
			<%= f.password_field :password_confirmation, class: "form-control my-blue" %>
			<br><br>>
			<div class="row">
                <div class="col-md-3"></div>
                <div class="col-md-6">
                	<%= f.submit "Update", class: "btn btn-default btn-lg btn-block" %>
                </div>
                <div class="col-md-3"></div>
        	</div>

			
		<% end %>
	</div>
	<div class="col-md-3"></div>
</div>
<br><br><br><br><br>