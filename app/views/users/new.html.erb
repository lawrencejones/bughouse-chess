<% provide(:title, 'Sign up') %>
<br><br><h1>Sign up</h1><br><br><br>

<div class="container">
    <div class="col-md-3"></div>
    <div class="col-md-6">
        <%= form_for(@user) do |f| %>

            <%= render 'shared/error_messages' %>
            <div class="my-blue" >
                <%= f.label :name %>
                <%= f.text_field :name, class: "form-control my-blue" %>
                <br>
                <%= f.label :email %>
                <%= f.text_field :email, class: "form-control my-blue" %>
                <br>
                <%= f.label :password %>
                <%= f.password_field :password, class: "form-control my-blue" %>
                <br>
                <%= f.label :password_confirmation %>
                <%= f.password_field :password_confirmation, class: "form-control my-blue" %>
            </div>
            <br><br><br>

            <div class="row">
                <div class="col-md-3"></div>
                <div class="col-md-6">
                   <%= f.submit "Create my account", class: "btn btn-default btn-lg btn-block" %>
                </div>
                <div class="col-md-3"></div>
            </div>

        <% end %>
    </div>
    <div class="col-md-3"></div>
</div><br><br><br>