<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="navbar-inner">
    <div class="container">
      <%= link_to "Bughouse Chess", root_path, id: "logo" %>
      <nav>
        <ul class="nav pull-right">
          <li class="<%= is_active?(root_path) %>"><%= link_to "Home", root_path %></li>
          <li class="<%= is_active?(help_path) %>"><%= link_to "Help", help_path %></li>
          <% if signed_in? %>
            <li class="<%= is_active?(users_path) %>"><%= link_to "Users", users_path %></li>
            <li id="fat-menu" class="dropdown <%= is_active?(current_user)%> 
                              <%=is_active?(edit_user_path(current_user)) %>">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                <%= current_user.name %> <b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <li><%= link_to "Profile", current_user %></li>
                <li><%= link_to "Settings", edit_user_path(current_user) %></li>
                <li class="divider"></li>
                <li>
                  <%= link_to "Sign out", signout_path, method: "delete" %>
                </li>
              </ul>
            </li>
          <% else %>
            <li  class="<%= is_active?(signin_path) %>"><%= link_to "Sign in", signin_path %></li>
          <% end %>
        </ul>
      </nav>
    </div>
  </div>
</header>