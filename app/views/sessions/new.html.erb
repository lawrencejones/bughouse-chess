<% provide(:title, "Sign in") %>
<br><br><h1>Sign in</h1><br><br><br>

<div class="container my-blue">
    <div class="col-md-3"></div>
    <div class="col-md-6">
        <%= form_for(:session, url: sessions_path) do |f| %>
            
            <%= f.label :email %>
            <%= f.text_field :email, class: "form-control my-blue" %>
            <br>          
            <%= f.label :password %>
            <%= f.password_field :password, class: "form-control my-blue" %>
            <br>
            <%= f.check_box :remember_me, {}, params[:remember_me] %>

      	    <br><br><br><br>

            <div class="row">
                <div class="col-md-3"></div>
                <div class="col-md-6">
                    <%= f.submit "Sign in", class: "btn btn-default btn-lg btn-block" %>
                </div>
                <div class="col-md-3"></div>
                  <p><%= link_to "Forgotten password?", new_password_reset_path %></p>
            </div>

        <% end %>
        <br><br><br>
        <p>New user? <%= link_to "Sign up now!", signup_path %></p>
        <br><br><br>
    </div>
    <div class="col-md-3"></div>
