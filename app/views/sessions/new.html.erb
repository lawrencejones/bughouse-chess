<% provide(:title, "Sign in") %>
<br><br><h1>Sign in</h1><br><br><br>

<%= form_for(:session, url: sessions_path) do |f| %>
    <div class="container my-blue">
        <div class="row">
            <div class="col-md-3"></div>
            <div class="col-md-6">
                <%= f.label :email %>
                <%= f.text_field :email, class: "form-control my-blue" %><br>

                <%= f.label :password %>
                <%= f.password_field :password, class: "form-control my-blue" %><br>
            </div>
            <div class="col-md-3"></div>     
        </div>

        <div class="row">
            <div class="col-md-3"></div>
            <div class="col-md-4">
                <%= f.label :remember_me, "&nbsp;&nbsp;Remember me".html_safe  %>
                <div class="col-md-1">
                    <%= f.check_box :remember_me, {} , remember_me_value = "1", remember_me_value = "0" %>
                </div>
            </div>
            <div class="col-md-4">
                <p><%= link_to "&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;Forgot password?".html_safe, new_password_reset_path %></p>
            </div>
        </div><br><br><br><br>
        
        <div class="row">
            <div class="col-md-4"></div>
            <div class="col-md-4">
                <%= f.submit "Sign in", class: "btn btn-default btn-lg btn-block" %>
            </div>
            <div class="col-md-4"></div>
        </div><br><br><br>

        <div class="row">
            <div class="col-md-3"></div>
            <div class="col-md-6">
                <p><b>New user? <%= link_to "Sign up now!", signup_path %></b></p>
            </div>
            <div class="col-md-3"></div>
        </div><br><br><br>
    </div>
<% end %>